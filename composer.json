{
    "name": "sanchescom/lumen-form-request",
    "description": "Lumen Form Request.",
    "type": "library",
    "keywords": [
        "laravel",
        "lumen",
        "form",
        "request"
    ],
    "homepage": "https://github.com/sanchescom/lumen-form-request",
    "license": "MIT",
    "authors": [
        {
            "name": "Aleksandr Efimov",
            "email": "sanches.com@mail.ru"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "laravel/lumen-framework": "~5.8"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Sanchescom\\Foundation\\": "src/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-text --colors=never",
        "check-style": "./vendor/bin/phpcs -p --standard=PSR2 ./src",
        "fix-style": "./vendor/bin/phpcbf --standard=PSR2 ./src"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "providers": [
            "Sanchescom\\Foundation\\Providers\\FormRequestServiceProvider"
        ]
    }
}
